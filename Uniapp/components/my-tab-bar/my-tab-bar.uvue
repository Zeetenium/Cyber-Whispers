<template>
	<view class="container">
		<view class="tab-item" @click="switchTab(0)">
			<image 
				class="tab-icon" 
				:src="activeTab === 0 ? '/static/tabbar/home-active.png' : '/static/tabbar/home-normal.png'" 
				mode="aspectFit">
			</image>
		</view>
		
		<view class="center-btn" @click="handleCenterClick">
			<text v-if="activeTab === 0" class="plus-icon">+</text>
			<text v-else class="star-icon">â˜…</text>
		</view>
		
		<view class="tab-item" @click="switchTab(1)">
			<image 
				class="tab-icon" 
				:src="activeTab === 1 ? '/static/tabbar/user-active.png' : '/static/tabbar/user-normal.png'" 
				mode="aspectFit">
			</image>
		</view>
	</view>
</template>

<script>
	export default {
		name:"MyTabBar", 
		props: {
			activeTab: {
				type: Number,
				default: 0
			}
		},
		emits: ['tab-change'],
		methods: {
			switchTab(index:number) {
				this.$emit('tab-change', index)
			},
			handleCenterClick() {
				if (this.activeTab === 0) {
					uni.$emit('triggerWriteModal');
				} else {
					uni.$emit('triggerConsoleBoot');
				}
			}
		}
	}
</script>

